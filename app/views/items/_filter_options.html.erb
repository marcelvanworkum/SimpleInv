<%= form_tag(items_path, method: :get) do %>
<div class="row">
  <div class="col">
    <div class="form-group">
      <%= select_tag :search_type,
                      options_for_select(search_types, selected: current_search_type),
                      class: 'form-control' %>
    </div>
  </div>

  <div class="col">
    <div class="form-group">
      <%= select_tag :search_order, 
                      options_for_select(search_orders, selected: current_search_order),
                      class: 'form-control' %>
    </div>
  </div>

  <div class="col">
    <%= submit_tag 'Filter', class: 'btn btn-primary' %>
  </div>

</div>
<% end %>